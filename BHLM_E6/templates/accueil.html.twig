{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

{% if user %}
    <a href="{{ path('deconnexion') }}" class="btn btn-danger">Déconnexion</a>
{% endif %}

{% if user %}
    <h2>Bienvenue {{ user.prenom }} ({{ user.login }}) sur le site complémentaire de la Chataigneraie !</h2>
{% endif %}
{% if userRole == 1 %}
    <h3>Vous êtes connecté en tant qu'administrateur, vous pouvez donc ajouter, modifier ou supprimer une entreprise qui peut prendre des stagiaires dans cette liste</h3>
{% endif %}

{% if userRole == 0 %}
    <h3>Ici, vous pouvez voir la liste des entreprises qui peuvent prendre des stagiaires</h3>
{% endif %}

<p>Nombre total d'entreprises : {{ listeEntreprise|length }}</p>

{#<p>User Role: {{ userRole }}</p>#}

{% if userRole == 1 %}
    <a href="{{ path('ajout') }}" class="btn btn-primary">Ajouter</a>
{% endif %}

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
        <tr>
            {% if userRole == 1 %}
                <th></th>
            {% endif %}
            <th>
                <a href="{{ path(app.request.attributes.get('_route'), {tri: 'nom', ordre: tri == 'nom' and ordre == 'asc' ? 'desc' : 'asc'}) }}">Nom de l'entreprise</a>
            </th>
            <th>
                <a href="{{ path(app.request.attributes.get('_route'), {tri: 'ville',ordre: tri == 'ville' and ordre == 'asc' ? 'desc' : 'asc'}) }}">Ville</a>
            </th>
            <th>Secteur d'activité</th>
            <th>Tuteurs</th>
            <th>Etudiants</th>
            <th>Profils</th>
            <th>Jury</th>
        </tr>
    </thead>
    <tbody>
        {% for entreprise in listeEntreprise %}
            <tr>
                {% if userRole == 1 %}
                <td><button class="btn btn-icone">
                    <a href="{{ path('modif') }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square icone" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                        </svg>
                    </a>
                </button>
                <button class="btn btn-icone">
                    <a href="{{ path('suppr',{ id: entreprise.id }) }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3 icone" viewBox="0 0 16 16">
                        <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
                        </svg>
                    </a>
                </button>
                </td>
                {% endif %}

                <td>{{ entreprise.nom }}</td>
                <td>
                    {{ entreprise.adresse }}<br>
                    {{ entreprise.cp }} {{ entreprise.ville }}
                </td>
                <td>{{ entreprise.secteurActivite.nom }}</td>
                <td>
                    {% for employe in entreprise.employes %}
                        {{ employe.nom }} {{ employe.prenom }}
                        {{ employe.fonction }}<br>
                        {{ employe.mail }}<br>
                        {{ employe.tel }}<br>
                    {% endfor %}
                </td>
                <td>
                    {% for profil in entreprise.profils %}
                        {{ profil.formation }} {{ profil.optionFormation }}
                    {% endfor %}
                </td>                
                <td>
                    {% for etudiant in entreprise.etudiants %}
                        {{ etudiant.nom }} {{ etudiant.prenom}} en {{ etudiant.bts }} {{ etudiant.specialite.nom }}<br>
                        Année du stage : {{ etudiant.annee }}
                    {% endfor %}
                </td>
                <td>
                    {% for session in listeSessionExam %}
                        {% for employe in session.jury %}
                            {% if employe in entreprise.employes %}
                                {{ employe.prenom }} {{ employe.nom }} est ok pour être jury en {{ session.mois }} {{ session.annee }} {{ session.specialite }}
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}