{% extends 'base.html.twig' %}

{% block title %}Ajout{% endblock %}

{% block body %}
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-body card-formulaire">
          <h2 class="mb-4 text-center">Ajouter une entreprise</h2>

          {{ form_start(ajoutEntreprise) }}

          <div class="row">
            <div class="col-md-6">
              {{ form_row(ajoutEntreprise.nom, {
                attr: {'class': 'form-control'},
                label_attr: {'class': 'form-label'}
              }) }}
            </div>
            <div class="col-md-6">
              {{ form_row(ajoutEntreprise.adresse, {
                attr: {'class': 'form-control'},
                label_attr: {'class': 'form-label'}
              }) }}
            </div>

            <div class="col-md-6">
              {{ form_row(ajoutEntreprise.cp, {
                attr: {'class': 'form-control'},
                label_attr: {'class': 'form-label'}
              }) }}
            </div>
            <div class="col-md-6">
              {{ form_row(ajoutEntreprise.ville, {
                attr: {'class': 'form-control'},
                label_attr: {'class': 'form-label'}
              }) }}
            </div>

            <div class="col-md-12">
              {{ form_row(ajoutEntreprise.SecteurActivite, {
                attr: {'class': 'form-select'},
                label_attr: {'class': 'form-label'}
              }) }}
            </div>
          </div>

          <div class="d-flex mt-3 row-submit">
            {{ form_row(ajoutEntreprise.cancel, {
              attr: {'class': 'btn btn-icone-suppr btn-primary'}
            }) }}
            {{ form_row(ajoutEntreprise.submit, {
              attr: {'class': 'btn btn-icone btn-primary'}
            }) }}
          </div>

          {{ form_end(ajoutEntreprise) }}

          {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-3">{{ message }}</div>
          {% endfor %}

        </div>
      </div>
    </div>
  </div>
{% endblock %}
