{% extends 'base.html.twig' %}

{% block title %}Ajout{% endblock %}

{% block body %}
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body card-formulaire">
          <h2 class="mb-4 text-center">Ajouter un jury pour une session</h2>

          {{ form_start(ajoutJuryForm) }}

          <div class="row">
            <div class="col-md-6">
              {{ form_row(ajoutJuryForm.SessionExam, {
                attr: {'class': 'form-select'},
                label_attr: {'class': 'form-label'}
              }) }}
            </div>
            <div class="col-md-6">
              {{ form_row(ajoutJuryForm.Employe, {
                attr: {'class': 'form-select'},
                label_attr: {'class': 'form-label'}
              }) }}
            </div>
          </div>

          <div class="d-flex mt-3 row-submit">
            {{ form_row(ajoutJuryForm.cancel, {
              attr: {'class': 'btn btn-icone-suppr btn-primary'}
            }) }}
            {{ form_row(ajoutJuryForm.submit, {
              attr: {'class': 'btn btn-icone btn-primary'}
            }) }}
          </div>

          {{ form_end(ajoutJuryForm) }}

        </div>
      </div>
    </div>
  </div>
{% endblock %}
